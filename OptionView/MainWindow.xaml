                            <DataGridTextColumn Header="Comments" Binding="{Binding Comments}"  />
                        </DataGrid.Columns>
                    </DataGrid>
                    <DockPanel  Background="#FF454545" Margin="6,4,4,5" Grid.Column="1">

                    </DockPanel>
                </Grid>

            </TabItem>
        </TabControl>

        <DockPanel Background="#FF454545" Margin="6,0,6,5" Grid.Row="1" VerticalAlignment="Center" Height="74" >

