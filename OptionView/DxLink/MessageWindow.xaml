<Window x:Class="DxLink.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DxLink"
        mc:Ignorable="d"
        Title="DxLink Library Messages" Height="800" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="700*" />
        </Grid.RowDefinitions>

        <TextBox x:Name="tbStatus" Margin="10,5,27,5" FontFamily="Consolas" FontSize="14" Grid.Row="0"/>
        <ScrollViewer Grid.Row="1" Grid.RowSpan="2">
            <TextBox x:Name="tbMain" Background="#FFF7F9FB" Text="" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="14" Margin="10,5,10,5"/>
        </ScrollViewer>

    </Grid>
</Window>

